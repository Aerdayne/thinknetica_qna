$('.answer-errors').html('<%= render '/shared/errors', resource: @answer %>');
$(".alert").remove();
$(".col-lg-9").prepend('<%= bootstrap_flash %>');
<% if current_user&.author_of?(answer) %>
  $('.delete-answer-link').bind('ajax:success', function() {
    $(this).closest('tr[class="answer"]').remove();
  })
<% end %>