<% if @comment.persisted? %>
  <% if resource.is_a? Answer %>
    $(".answers div[data-id='<%= resource.id %>'] .comments").append('<%= j render @comment %>');
    $("div[data-id='<%= resource.id %>'] #comment_content").val('');
  <% elsif resource.is_a? Question %>
    $(".question .comments").append('<%= j render @comment %>');
    $(".question #comment_content").val('');
  <% end %>
<% end %>